{
  "name": "create-codewithpablo",
  "version": "1.0.4",
  "description": "A minimal React + TypeScript boilerplate with best practices.",
  "main": "src/main.tsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloFuentesSanz/codewithpablo-boilerplate.git"
  },
  "keywords": [
    "react",
    "typescript",
    "boilerplate",
    "vite",
    "eslint",
    "prettier"
  ],
  "author": "Pablo Fuentes",
  "license": "MIT",
  "bin": {
    "create-codewithpablo": "./cli.js"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "check": "npm run lint:check && npm run format:check && npm run type-check",
    "prepare": "husky && husky install",
    "postinstall": "chmod +x .husky/*"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^8.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
  }
}
